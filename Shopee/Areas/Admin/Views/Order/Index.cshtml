
@{
    ViewData["title"] = "Order Listed";
}
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Order Code</th>
            <th scope="col">Username</th>
            <th scope="col">Created Date</th>
            <th scope="col">Status</th>
            <th scope="col">Actions</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var orders in Model)
        {
            <tr>
                <td scope="row">@orders.Id</td>

                <td>@orders.OrderCode</td>
                <td>@orders.UserName</td>
                <td>@orders.CreatedDate</td>
                <td>@orders.Status</td>
                <td>
                    <a asp-action="Details" asp-controller="Order" asp-route-orderCode="@orders.OrderCode" class="btn btn-sm btn-success">Edit</a>
                    <a asp-action="Delete" asp-controller="Order" asp-route-Id="@orders.Id" class="btn btn-sm btn-warning confirmDeletion">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>