@model IEnumerable<CategoryModel>

@{

    ViewData["title"] = "Product Listed";
}
<a asp-area="admin" asp-controller="Category" asp-action="Create"><div class="p-2"><h3>Create category</h3></div></a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Slug</th>
            <th scope="col">Status</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var category in Model)
        {
            <tr>
                <th scope="row">@category.Id</th>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>@category.Slug</td>
                <td>@category.Status</td>
                <td>
                    <a asp-action="Edit" asp-controller="Category" asp-route-Id="@category.Id" class="btn btn-sm btn-success">Edit</a>
                    <a asp-action="Delete" asp-controller="Category" asp-route-Id="@category.Id" class="btn btn-sm btn-warning confirmDeletion">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>